// 캡슐화가 잘 된 코드 예시
class BankAccount {
  // 필드는 private으로 선언 (언더스코어 사용)
  double _balance;

  BankAccount(this._balance);

  // balance를 안전하게 읽을 수 있는 getter
  double get balance => _balance;

  // balance를 안전하게 변경할 수 있는 메서드
  void deposit(double amount) {
    if (amount > 0) {
      _balance += amount;
    } else {
      print("입금 금액은 0보다 커야 합니다.");
    }
  }

  void withdraw(double amount) {
    if (amount > 0 && amount <= _balance) {
      _balance -= amount;
    } else {
      print("출금 불가: 금액이 잘못되었거나 잔액 부족");
    }
  }
}

void main() {
  var account = BankAccount(1000);
  account.deposit(500);
  account.withdraw(200);
  print("현재 잔액: ${account.balance}");
}




//캡슐화가 잘 안 된 코드 예시
class BankAccount {
  // 필드를 public으로 선언
  double balance;

  BankAccount(this.balance);
}

void main() {
  var account = BankAccount(1000);
  // 외부에서 직접 balance를 수정 가능
  account.balance = -500; // 잘못된 값도 허용됨
  print("현재 잔액: ${account.balance}");
}
